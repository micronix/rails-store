<%= link_to 'New', new_product_path, class: 'btn btn-primary' %>

<% @products.each do |product| %>
<div class="media">
  <div class="media-left">
    <a href="#">
      <img class="media-object product-thumb" src="<%= product.picture_url %>" alt="...">
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to product.name, product_path(product) %></h4>
    <% product.rating.times do %>
      <i class="fa fa-star"></i>
    <% end %>
    <hr></hr>
    <%= product.description %>
    <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-default' %>
  </div>
</div>
<% end %>