<div class="media">
  <div class="media-left">
    <a href="#">
      <img class="media-object product-main" src="<%= @product.picture_url %>" alt="...">
    </a>
  </div>
  <div class="media-body">
    <h1 class="media-heading"><%= @product.name %></h1>
    <%= @product.description %>
    <hr>
    <h4>Price: $<%= @product.price %></h4>
    <%= link_to 'Edit', "/products/#{@product.id}/edit", class: 'btn btn-default' %>
  </div>
</div>